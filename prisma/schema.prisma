generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id         String    @id @default(uuid())
  email      String    @unique
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  name       String
  ApiQouta   ApiQuota?
  food       Food[]

  @@map("user_profile")
}

model Food {
  id          String      @id @default(uuid())
  title       String
  description String
  cover_photo String
  rate        Int
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  user_id     String
  isPublic    Boolean
  User        UserProfile @relation(fields: [user_id], references: [id])

  @@map("foods")
}

model ApiQuota {
  id                  String      @id @unique @default(uuid())
  apiKey              String?
  apiCallLimit        Int         @default(20)
  apiCallCoolDown     String?
  fromUser            String      @unique
  created_at          DateTime    @default(now())
  updated_at          DateTime    @updatedAt
  apiResetLimitInTime DateTime?
  UserProfile         UserProfile @relation(fields: [fromUser], references: [id])

  @@map("api_quota")
}
